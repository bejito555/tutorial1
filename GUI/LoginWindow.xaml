<Window x:Class="CustomerManagementApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="390" Width="560" Background="DarkGray">
    <Grid Margin="0,0,0,-1">
        <Grid.Background>
            <ImageBrush ImageSource="/pngtree-night-sky-romantic-sky-picture-image_2235299.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Đăng Nhập" FontSize="24" Foreground="#FF0163FF" Margin="0,0,0,20" TextAlignment="Center" Background="Black"/>

            <TextBlock Text="Tài Khoản:" Foreground="#FF0261F9" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Height="30" Margin="0,0,0,20" TextChanged="UsernameTextBox_TextChanged" Background="#FF0E0911" Foreground="#FFFBFBFB"/>

            <TextBlock Text="Mật Khẩu:" Foreground="#FF136AF6" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30" Margin="0,0,0,20" Background="#FF0E0911" Foreground="#FFFBFBFB" />

            <Button Content="Đăng Nhập" Width="200" Height="40" Background="#FF4E82E6" Foreground="White"
                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
