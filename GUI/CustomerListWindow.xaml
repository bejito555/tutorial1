<Window x:Class="CustomerManagementApp.CustomerListForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh Sách Khách Hàng" Height="535" Width="860">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nút Xuất File -->
        <Button Content="Xuất File .txt" Width="120" Height="30" HorizontalAlignment="Right" Margin="0,10,10,0" Click="ExportToTextFile_Click" Grid.Row="0"/>

        <!-- DataGrid -->
        <DataGrid x:Name="CustomerDataGrid" AutoGenerateColumns="True" Margin="0,10,0,0" Grid.Row="1"/>
    </Grid>
</Window>
