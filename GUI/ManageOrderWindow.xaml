<Window x:Class="CustomerManagementApp.ManageOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Đơn Hàng" Height="200" Width="400" Background="DarkGray">
    <Grid Margin="0,0,0,-1">
        <Grid.Background>
            <ImageBrush ImageSource="/pngtree-night-sky-romantic-sky-picture-image_2235299.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nhập ID Đơn Hàng -->
        <TextBlock Text="Mã Đơn Hàng:" Grid.Row="0" VerticalAlignment="Center" Foreground="#FF0261F9"/>
        <TextBox Name="txtOrderId" Grid.Row="0" Margin="90,6,10,4" Background="#FF0E0911" Foreground="#FFFBFBFB"/>

        <!-- Nút Chỉnh Sửa -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Chỉnh Sửa" Width="100" Margin="10" Background="#FF4E82E6" Foreground="White" Click="EditOrder_Click"/>
        </StackPanel>
    </Grid>
</Window>
